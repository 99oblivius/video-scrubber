{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "video-editor",
  "version": "0.1.0",
  "identifier": "dev.oblivius.video-editor.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Video Editor",
        "width": 1000,
        "height": 760,
        "resizable": true,
        "minHeight": 330,
        "minWidth": 480,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
